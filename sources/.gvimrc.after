" Set font size
set guifont=Source\ Code\ Pro:h14

" Theme
color molokai
let g:molokai_original=1

" Disable some useless functions.
" * Left Click
nnoremap <LeftMouse> <Nop>
inoremap <LeftMouse> <Nop>

" Set cursorline and color column
set cursorline
set colorcolumn=80
set hlsearch
hi CursorLine guibg=#252525
hi ColorColumn guibg=#252525
hi Search guibg=#f92672 guifg=#f8f8f2
